{
  "compilerOptions": {
    "outDir": "dist/esm",
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "strictNullChecks": true
  },
  "include": ["src"]
}
